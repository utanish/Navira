<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= organization.name %> - NGO Website</title>
    <meta
      name="description"
      content="<%= organization.mission || organization.about %>"
    />
    <link rel="stylesheet" href="css/style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=<%= design.font.replace(' ', '+') %>:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
  </head>
  <body>
    <!-- Header -->
    <header class="header">
      <nav class="nav container">
        <div class="logo">
          <% if (organization.logo) { %>
          <img src="images/logo.jpg" alt="<%= organization.name %> Logo" />
          <% } %>
          <span class="logo-text"><%= organization.name %></span>
        </div>
        <ul class="nav-menu">
          <li><a href="#home" class="nav-link">Home</a></li>
          <li><a href="#about" class="nav-link">About</a></li>
          <% if (team && team.length > 0) { %>
          <li><a href="#team" class="nav-link">Team</a></li>
          <% } %> <% if (projects && projects.length > 0) { %>
          <li><a href="#projects" class="nav-link">Projects</a></li>
          <% } %>
          <li><a href="#contact" class="nav-link">Contact</a></li>
        </ul>
      </nav>
    </header>

    <!-- Hero Section -->
    <section id="home" class="hero">
      <div class="container">
        <div class="hero-content">
          <h1><%= organization.name %></h1>
          <% if (organization.mission) { %>
          <p><%= organization.mission %></p>
          <% } %> <% if (contact.donationLink) { %>
          <a href="<%= contact.donationLink %>" class="btn" target="_blank"
            >Donate Now</a
          >
          <% } %>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="section">
      <div class="container">
        <h2 class="section-title">About Us</h2>
        <div class="about-content">
          <div class="about-text">
            <% if (organization.vision) { %>
            <h3>Our Vision</h3>
            <p><%= organization.vision %></p>
            <% } %> <% if (organization.about) { %>
            <h3>Our Story</h3>
            <p><%= organization.about %></p>
            <% } %>
          </div>
          <% if (organization.banner) { %>
          <div class="about-image">
            <img src="images/banner.jpg" alt="<%= organization.name %>" />
          </div>
          <% } %>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <% if (team && team.length > 0) { %>
    <section id="team" class="section">
      <div class="container">
        <h2 class="section-title">Our Team</h2>
        <div class="team-grid">
          <% team.forEach((member, index) => { %>
          <div class="team-member">
            <% if (member.photo) { %>
            <img src="images/team-<%= index %>.jpg" alt="<%= member.name %>" />
            <% } else { %>
            <img
              src="https://via.placeholder.com/150x150/cccccc/666666?text=<%= member.name.charAt(0) %>"
              alt="<%= member.name %>"
            />
            <% } %>
            <h4><%= member.name %></h4>
            <% if (member.role) { %>
            <p class="role"><%= member.role %></p>
            <% } %> <% if (member.bio) { %>
            <p><%= member.bio %></p>
            <% } %>
          </div>
          <% }); %>
        </div>
      </div>
    </section>
    <% } %>

    <!-- Projects Section -->
    <% if (projects && projects.length > 0) { %>
    <section id="projects" class="section">
      <div class="container">
        <h2 class="section-title">Our Projects</h2>
        <div class="projects-grid">
          <% projects.forEach((project, index) => { %>
          <div class="project-card">
            <% if (project.image) { %>
            <img
              src="images/project-<%= index %>.jpg"
              alt="<%= project.title %>"
            />
            <% } else { %>
            <img
              src="https://via.placeholder.com/400x200/cccccc/666666?text=Project"
              alt="<%= project.title %>"
            />
            <% } %>
            <div class="project-content">
              <h4><%= project.title %></h4>
              <p><%= project.description %></p>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </section>
    <% } %>

    <!-- Contact Section -->
    <section id="contact" class="section contact">
      <div class="container">
        <h2 class="section-title">Contact Us</h2>
        <div class="contact-content">
          <div class="contact-info">
            <h4>Get in Touch</h4>
            <% if (contact.email) { %>
            <div class="contact-item">
              <i class="fas fa-envelope"></i>
              <span><%= contact.email %></span>
            </div>
            <% } %> <% if (contact.phone) { %>
            <div class="contact-item">
              <i class="fas fa-phone"></i>
              <span><%= contact.phone %></span>
            </div>
            <% } %> <% if (contact.address) { %>
            <div class="contact-item">
              <i class="fas fa-map-marker-alt"></i>
              <span><%= contact.address %></span>
            </div>
            <% } %>

            <div class="social-links">
              <% if (contact.socialMedia.facebook) { %>
              <a
                href="<%= contact.socialMedia.facebook %>"
                class="social-link"
                target="_blank"
              >
                <i class="fab fa-facebook-f"></i>
              </a>
              <% } %> <% if (contact.socialMedia.twitter) { %>
              <a
                href="<%= contact.socialMedia.twitter %>"
                class="social-link"
                target="_blank"
              >
                <i class="fab fa-twitter"></i>
              </a>
              <% } %> <% if (contact.socialMedia.instagram) { %>
              <a
                href="<%= contact.socialMedia.instagram %>"
                class="social-link"
                target="_blank"
              >
                <i class="fab fa-instagram"></i>
              </a>
              <% } %> <% if (contact.socialMedia.linkedin) { %>
              <a
                href="<%= contact.socialMedia.linkedin %>"
                class="social-link"
                target="_blank"
              >
                <i class="fab fa-linkedin-in"></i>
              </a>
              <% } %>
            </div>
          </div>

          <div class="contact-form">
            <h4>Send us a Message</h4>
            <form id="contact-form">
              <div class="form-group">
                <input
                  type="text"
                  name="name"
                  placeholder="Your Name"
                  required
                />
              </div>
              <div class="form-group">
                <input
                  type="email"
                  name="email"
                  placeholder="Your Email"
                  required
                />
              </div>
              <div class="form-group">
                <textarea
                  name="message"
                  placeholder="Your Message"
                  rows="5"
                  required
                ></textarea>
              </div>
              <button type="submit" class="btn">Send Message</button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <p>
          &copy; <%= new Date().getFullYear() %> <%= organization.name %>. All
          rights reserved.
        </p>
      </div>
    </footer>

    <script src="js/script.js"></script>
  </body>
</html>
